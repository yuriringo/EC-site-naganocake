<h3>注文履歴一覧</h3>
 <table>
  <thead>
   <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    <th colspan="4"></th>
   </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
   <tr>
    <td><%= link_to order.updated_at, admin_order_path(order.id) %></td>
    <td><%= order.name %></td>
    <% sum=0 %>
    <% order.order_items.each do |order_item| %>
     <% sum += order_item.amount %>
    <% end %>
    <td><%= sum %></td>
    <td><%= order.order_status_i18n %></td>
   </tr>
   <% end %>
  </tbody>
 </table>