<h3>注文履歴一覧</h3>
 <table>
  <thead>
   <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
    <th>注文ステータス</th>
    <th colspan="4"></th>
   </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
   <tr>
    <td><%= order.updated_at %></td>
    <td><%= order.name %></td>
    <% order.order_items.each do |order_item| %>
    <td><%= order_item.amount %></td>
    <td><%= order_item.confectionary_status %></td>
    <% end %>
   </tr>
   <% end %>
  </tbody>
 </table>