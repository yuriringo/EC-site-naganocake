<h4><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

<%= form_with model: @customer,url: admin_customer_path(@customer.id), method: :patch do |f| %>

<table>
 <tr>
  <th>氏名</th> <th><%= f.text_field :last_name %> <%= f.text_field :first_name %></th>
 </tr>

 <tr>
  <th>フリガナ</th> <th><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></th>
 </tr>

 <tr>
  <th>郵便番号</th> <th><%= f.text_field :postal_code %></th>
 </tr>

 <tr>
  <th>住所</th> <th><%= f.text_area :address %></th>
 </tr>

 <tr>
  <th>電話番号</th> <th><%= f.text_field :telephone_number %></th>
 </tr>

 <tr>
  <th>メールアドレス</th> <th><%= f.text_field :email %></th>
 </tr>

 <tr>
  <th>会員ステータス</th> <th><%= f.radio_button :is_active, true %></th> <th>有効</th>
  <th>会員ステータス</th> <th><%= f.radio_button :is_active, false %></th> <th>退会</th>
 </tr>
</table>

<%= f.submit '変更内容を保存' %>

<% end %>