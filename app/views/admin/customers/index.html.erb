<h4>会員一覧</h4>

<table class="table table-hover table-inverse">
  <thead>
   <tr>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
    <th colspan="4"></th>
   </tr>
  </thead>
  <tbody>
   <% @customers.each do |customer| %>
    <tr>
     <td>
      <%= customer.id %>
     </td>
     <td>
      <%= link_to admin_customer_path(customer.id) do %>
       <%= customer.last_name %> <%= customer.first_name %>
      <% end %>
     </td>
     <td>
      <%= customer.email %>
     </td>
     <td>
      <% if customer.is_deleted %>
       退会
      <% else %>
       有効
      <% end %>
     </td>
    </tr>
   <% end %>
  </tbody>