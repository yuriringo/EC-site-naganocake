<h4>注文履歴詳細</h4>
<p>Find me in app/views/admin/orders/show.html.erb</p>
<%= form_with model: @order,url: admin_order_path(@order.id), method: :patch do |f| %>

<table>
 <tr>
   <th>購入者</th> <th><%= @order.name %></th>
 </tr>

 <tr>
   <th>注文日</th> <th><%= @order.updated_at %></th>
 </tr>

 <tr>
   <th>配送先</th> <th><%= @order.postal_code %><%= @order.address %> </br><%= @order.name %></th>
 </tr>

 <tr>
   <th>支払い方法</th> <th><%= @order.payment_method %></th>
 </tr>

 <tr>
   <th>注文ステータス</th> <th><%= @order.order_status %></th>
 </tr>
</table>

<% @order.order_items.each do |order_item| %>
 <% @total += order_item.sum_of_price %>
<% end %>

</br>

<table>
  <thead>
   <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th>製作ステータス</th>
    <th colspan="5"></th>
   </tr>
  </thead>
  <tbody>
   <% @order.order_items.each do |order_item| %>
   <tr>
    <td>
     <%= order_item.item.name %>
    </td>

    <td>
     <%= order_item.item.add_tax_price.to_s(:delimited) %>
    </td>

    <td>
     <%= order_item.amount %>
    </td>

    <td>
     <%= order_item.sum_of_price %>
    </td>

    <td>
     <%= f.select :confectionary_status, {'製作不可': 0, '製作待ち': 1, '製作中': 2, '製作完了': 3}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
    </td>

    <td>
     <%= f.submit '更新する' %>
    </td>
   </tr>

  <% end %>
  </tbody>
 </table>

 </br>
 <table>
  <tr>
   <th>商品合計</th> <th><%= @total %></th>
  </tr>
  <tr>
   <th>送料</th> <th><%= 800 %></th>
  </tr>
  <tr>
   <th>請求合計金額</th> <th><%= @total+800 %></th>
  </tr>
 </table>

 <% end %>