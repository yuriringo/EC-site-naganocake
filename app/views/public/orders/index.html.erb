<h4>注文履歴一覧</h4>
<p>Find me in app/views/public/orders/index.html.erb</p>
<%= form_with model: @order,url: order_path(@order.id), method: :get do |f| %>

<table>
  <thead>
   <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
    <th colspan="6"></th>
   </tr>
  </thead>
  <tbody>
   <% @order.each do |order| %>
   <tr>
    <td>
     <%= order.updated_at %>
    </td>

    <td>
     <%= f.hidden_field :order, :value => order.id %>
     <%= order.postal_code %> <%= order.address %><%= order.name %>
    </td>

    <td>
     <%= order.cart_item.name %>
    </td>

    <td>
     <% @total += cart_item.sum_of_price %>
     <%= @total+800 %>
    </td>

    <td>
     <%= order.order_status %>
    </td>

    <td>
     <%= link_to "表示する", order_path(order.id) %>
    </td>

    <% end %>