<h4>注文履歴一覧</h4>
<p>Find me in app/views/public/orders/index.html.erb</p>

<table>
  <thead>
   <tr>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
    <th colspan="6"></th>
   </tr>
  </thead>
  <tbody>
   <% @orders.each do |order| %>
   <tr>
    <td>
     <%= order.updated_at %>
    </td>

    <td>
     <%= order.postal_code %> <%= order.address %><%= order.name %>
    </td>

    <td>
     <% order.order_items.each do |order_item| %>
      <%= order_item.item.name %>
      <% @total += order_item.sum_of_price %>
     <% end %>
    </td>

    <td>
     <%= @total+800 %>
    </td>

    <td>
     <%= order.order_status %>
    </td>

    <td>
     <%= link_to "表示する", order_path(order.id) %>
    </td>

   <% end %>