<h3>マイページ</h3>

<h3>登録情報</h3>

<%= form_with model: @customer,url: addresses_path, method: :get do |f| %>
<%= f.submit '編集する' %>

<table class="table table-hover table-inverse">
  <table>
    <tr>
     <th>氏名</th> <th><%= @customer.last_name %> <%= @customer.first_name %></th>
    </tr>
    <tr>
     <th>カナ</th> <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
    </tr>
    <tr>
     <th>郵便番号</th> <th><%= @customer.postal_code %></th>
    </tr>
    <tr>
     <th>住所</th> <th><%= @customer.address %></th>
    </tr>
    <tr>
     <th>電話番号</th> <th><%= @customer.telephone_number %></th>
    </tr>
    <tr>
     <th>メールアドレス</th> <th><%= @customer.email %></th>
    </tr>
  </table>

<% end %>